{
    "env": {
      "es6": true,
      "es2017": true,
      "es2020": true,
      "node": true
    },
    "plugins": [
      "ava",
      "node",
      "import",
      "jsdoc"
    ],
    "extends": [
      "eslint:recommended",
      "google",
      "plugin:ava/recommended",
      "plugin:node/recommended-module",
      "plugin:import/errors",
      "plugin:import/warnings",
      "plugin:jsdoc/recommended"
    ],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "rules": {
      "require-jsdoc": "off",
      "valid-jsdoc": "off",
      "max-len": "warn",
      "import/no-commonjs": "error",
      "import/no-amd": "error"
    }
  }
