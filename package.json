{
  "name": "mass.js",
  "version": "1.3.3",
  "description": "ES Module for parsing and formatting mass units.",
  "homepage": "https://mass.tylervigario.com",
  "module": "./lib/entries/US.mjs",
  "type": "module",
  "exports": {
    "./entry/US": "./lib/entries/US.mjs",
    "./entry/UK": "./lib/entries/UK.mjs",
    "./entry/SI": "./lib/entries/SI.mjs"
  },
  "scripts": {
    "lint": "eslint --config .eslintrc.json lib/ test/ performance/ --ext mjs",
    "lint:fix": "eslint --config .eslintrc.json lib/ test/ performance/ --ext mjs --fix",
    "test": "ava --verbose",
    "test:coverage": "c8 ava",
    "performance": "node --experimental-modules ./performance/index.mjs"
  },
  "keywords": [
    "mass",
    "unit",
    "imperial",
    "metric",
    "ton",
    "pound",
    "ounce",
    "weight"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TylerVigario/Mass.js"
  },
  "bugs": {
    "url": "https://github.com/TylerVigario/Mass.js/issues"
  },
  "author": {
    "name": "Tyler Vigario",
    "email": "tylervigario90@gmail.com"
  },
  "license": "MIT",
  "engines": {
    "node": ">=12"
  },
  "devDependencies": {
    "@tylervigario/performance": "github:TylerVigario/performance",
    "ava": "^3.8.1",
    "c8": "^7.1.2",
    "eslint": "^6.8.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-ava": "^10.3.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsdoc": "^24.0.6",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-security": "^1.4.0"
  },
  "dependencies": {
    "i18next": "^19.4.4",
    "n2words": "^1.7.0"
  },
  "ava": {
    "files": [
      "test/**/*"
    ],
    "nodeArguments": [
      "--experimental-modules"
    ]
  },
  "c8": {
    "reporter": [
      "lcov",
      "text"
    ]
  }
}
